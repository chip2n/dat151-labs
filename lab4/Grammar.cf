PDefs.   Program ::= [Def] ;
terminator Def ";" ;

DFun.    Def ::= Ident [Arg] "=" Exp ;

Arg.     Arg ::= Ident ;
separator Arg "" ;

EId.     Exp3 ::= Ident ;
EInt.    Exp3 ::= Integer ;
EApp.    Exp2 ::= Exp2 Exp3;
EAdd.    Exp1 ::= Exp1 "+" Exp2 ;
ESub.    Exp1 ::= Exp1 "-" Exp2 ;
ELt.     Exp1 ::= Exp1 "<" Exp2 ;
EIf.     Exp0 ::= "if" Exp "then" Exp "else" Exp ;
EAbs. Exp0 ::= "\\" [Arg] "->" Exp ;

coercions Exp 3 ;

comment "--" ;
